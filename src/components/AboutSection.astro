---
import { Content } from "../components/About.md";
---

<section id="about" class="min-h-screen flex p-8 lg:px-32 pt-16 bg-[#34b37c]">
  <div class="flex flex-col gap-4">
    <div class="text-6xl font-bold">
      <h2>
        About <strong
          class="bg-clip-text text-transparent bg-gradient-to-l from-[#B37C34] to-[#7C34B3]"
          >me.</strong
        >
      </h2>
    </div>

    <div class="flex flex-col-reverse lg:flex-row gap-16">
      <div class="flex-1 flex justify-center items-center">
        <img src="/assets/profile.svg" alt="home section logo" />
      </div>
      <div class="flex-1">
        <p class="text-2xl"><Content /></p>
      </div>
    </div>
  </div>
</section>
