---
import { Content } from "../components/TechStack.md";
import TechLogo from "./TechLogo.astro";

import { logos } from "../components/logos.js";
---

<section
  id="stack"
  class="min-h-screen flex p-8 lg:px-32 pt-16 w-full"
>
  <div class="flex flex-col gap-12 md:gap-24 flex-1">
    <div class="text-6xl font-bold text-white">
      <h2>
        <strong
          class="bg-clip-text text-transparent bg-gradient-to-l from-[#7C34B3] to-[#34b37c]"
          >Tech</strong
        > stack.
      </h2>
    </div>
    <div>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-16">
        {
          logos.map(({ logoUrl, logoAlt }) => (
            <TechLogo logoUrl={logoUrl} alt={logoAlt} />
          ))
        }
      </div>
    </div>
  </div>
</section>
